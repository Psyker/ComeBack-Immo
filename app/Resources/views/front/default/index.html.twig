{% extends ':front/layout:base.html.twig' %}

{% block body %}
    <div class="flexslider" id="slider">
        <ul class="slides">
            {% for carouselProperty in carouselProperties %}
            <li>
                <img src="{{ carouselProperty.imageUrl }}" class="img-responsive" alt="Slider Image" />
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="detail">
                                <div class="white">
                                    <h2>{{ carouselProperty.0.location.city }} <br> {{ carouselProperty.0.type }}</h2>
                                    <span class="slide-location">{{ carouselProperty.0.location.city }} ({{ carouselProperty.0.location.country }})</span>
                                    <div class="bar"></div>
                                    <span class="slide-price">{{ carouselProperty.0.netPrice }} €</span>
                                </div>
                                <div class="red">
                                    <span class="bath">{{ carouselProperty.0.propertyInside.bathroomQuantity }} Salles de bains</span>
                                    <span class="bed">{{ carouselProperty.0.propertyInside.bedroomQuantity }} Chambres</span>
                                    {#<span class="gym">1 Gym</span>#}
                                    {#<span class="pool">2 Pool</span>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
    <!-- SLIDER -->

    <!-- FILTER -->
    <div class="container">
        <div class="filter">
            <select class="location">
                <option>Location</option>
                <option>London</option>
                <option>Paris</option>
                <option>New York</option>
            </select>
            <select class="cata">
                <option>Category</option>
                <option>Land</option>
                <option>Plots</option>
                <option>Commercial</option>
            </select>
            <select class="type">
                <option>Type</option>
                <option>Buy</option>
                <option>Sell</option>
                <option>Rent</option>
            </select>
            <select class="type">
                <option>Type</option>
                <option>Buy</option>
                <option>Sell</option>
                <option>Rent</option>
            </select>
            <button type="button" class="btn"><i class="fa fa-search"></i>Search</button>
            <div class="range">
                <p>
                    <label for="price">Price</label>
                    <span>$ <input type="text" id="price" ></span>
                </p>
                <div id="price-range"></div>
            </div>

            <a href="#" class="adv-srch">Advance Search</a>

        </div>
    </div>
    <!-- FILTER -->

    <!-- ITEMS GRID -->
    <div class="container">
        <div class="row">

            {% for propertyRow in properties|batch(3) %}
                {% for row in propertyRow %}
                    {% set property = row %}
                    <div class="col-md-4 col-sm-6">
                        <div class="item">
                            <div class="item-header clearfix">
                                <h3><a href="{{ path('app_front_property_show', {'id': property.affId}) }}">{{ property.location.city }} {{ property.type }}</a></h3>
                                {#<span class="favorite"><i class="fa fa-heart"></i>9</span>#}
                            </div>
                            <figure>
                                <img src="{{ property.medias[0].imageUrl }}" alt="" class="img-responsive">
                                {#<span class="label sale">Sell</span>#}
                                <div class="overlay">
                                    <a href="{{ path('app_front_property_show', {'id': property.affId}) }}" class="btn btn-detail">Voir</a>
                                </div>
                            </figure>
                            <div class="item-detail">
                                <div class="left">
                                    <span class="place"><i class="fa fa-map-marker"></i>{{ property.location.city }} ({{ property.location.country }})</span>
                                    <span class="bed">{{ property.propertyInside.bedroomQuantity }}</span>
                                    <span class="bath">{{ property.propertyInside.bathroomQuantity }}</span>
                                    <span class="garage">{{ property.propertyOther.garageQuantity|default(0) }}</span>
                                    {#<span class="gym">1</span>#}
                                </div>
                                <div class="right">
                                    <span class="area">{{ property.propertyArea.area|default("N/A") }} m2</span>
                                    <span class="price">{{ property.netPrice }} €</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
