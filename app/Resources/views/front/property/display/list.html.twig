{% extends ':front/layout:base.html.twig' %}

{% block body %}
<div class="page-wrap properties-page">

    <!-- BREADCRUMBS-->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumbs">
                    <a href="index.html">Home</a>
                    <span class="sep">/</span>
                    <span class="current">Properties List</span>
                </div>
                <h2 class="page-title">All Properties</h2>
            </div>
        </div>
    </div>
    <!-- BREADCRUMBS -->

    <div class="container">
        <div class="row">

            {% include ':front/layout:property_sidebar.html.twig' %}

            <div class="col-md-8">
                <div class="row properties-list">
                    {% for property in properties %}
                    <div class="col-md-12">
                        <div class="item">
                            <figure>
                                <img src="{{ property.medias[0].imageUrl }}" alt="" class="img-responsive">
                                {#<span class="label sale">Sell</span>#}
                                <div class="overlay">
                                    <a href="#" class="btn btn-detail">Voir</a>
                                </div>
                            </figure>
                            <div class="item-data">
                                <div class="item-header clearfix">
                                    <h3><a href="#">{{ property.location.city }} {{ property.type }}</a></h3>
                                    {#<span class="favorite"><i class="fa fa-heart"></i>9</span>#}
                                    <span class="place">
                                        <i class="fa fa-map-marker"></i>
                                        {{ property.location.city }} {{ property.location.country }}
                                    </span>
                                </div>
                                <div class="item-detail">
                                    <span class="price">{{ property.netPrice }} â‚¬</span>
                                    <div class="left">
                                        <span class="bed">{{ property.propertyInside.bedroomQuantity }}</span>
                                        <span class="bath">{{ property.propertyInside.bathroomQuantity }}</span>
                                        <span class="garage">{{ property.propertyOther.garageQuantity|default(0) }}</span>
                                        {#<span class="gym">1</span>#}
                                    </div>
                                    <div class="right">
                                        <span class="area">{{ property.propertyArea.area|default("N/A") }} m2</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- PAGINATION -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="pagination">
                    <a href="#" class="prev"><i class="fa fa-angle-left"></i>Previous</a>
                    <a href="#">1</a>
                    <span>2</span>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">6</a>
                    <a href="#" class="next">Next<i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGINATION -->
</div>
{% endblock %}